<?xml version="1.0" encoding="UTF-8"?>
<action-recipes>
  <snippet id="org.neptun3.snippets.javascript.proto" category="tools.Snippets">
      <title>Prototype</title>
      <text><![CDATA[${1:class_name}.prototype.${2:method_name} = function(${3:first_argument}) {
  ${4:// body...}
  };]]></text>
      <syntax-context>js, js *</syntax-context>
      <text-trigger>proto</text-trigger>
  </snippet>
  <snippet id="org.neptun3.snippets.javascript.fun" category="tools.Snippets">
      <title>Function</title>
      <text><![CDATA[function ${1:function_name} (${2:argument}) {
  ${3:// body...}
  }]]></text>
      <syntax-context>js, js *</syntax-context>
      <text-trigger>fun</text-trigger>
  </snippet>
  <snippet id="org.neptun3.snippets.javascript.f" category="tools.Snippets">
      <title>Anonymous function</title>
      <text><![CDATA[function(${1}) {${2}};]]></text>
      <syntax-context>js, js *</syntax-context>
      <text-trigger>f</text-trigger>
  </snippet>
  <snippet id="org.neptun3.snippets.javascript.if" category="tools.Snippets">
      <title>if</title>
      <text><![CDATA[if (${1:true}) {${2}};]]></text>
      <syntax-context>js, js *</syntax-context>
      <text-trigger>if</text-trigger>
  </snippet>
  <snippet id="org.neptun3.snippets.javascript.ife" category="tools.Snippets">
      <title>if ... else</title>
      <text><![CDATA[if (${1:true}) {${2}}
else{${3}};]]></text>
      <syntax-context>js, js *</syntax-context>
      <text-trigger>ife</text-trigger>
  </snippet>
  <snippet id="org.neptun3.snippets.javascript.t" category="tools.Snippets">
      <title>tertiary conditional</title>
      <text><![CDATA[${1:/* condition */} ? ${2:a} : ${3:b}]]></text>
      <syntax-context>js, js *</syntax-context>
      <text-trigger>t</text-trigger>
  </snippet>
  <snippet id="org.neptun3.snippets.javascript.switch" category="tools.Snippets">
      <title>switch</title>
      <text><![CDATA[switch(${1:expression}) {
case '${3:case}':
	${4:// code}
	break;
${5}
default:
	${2:// code}
}]]></text>
      <syntax-context>js, js *</syntax-context>
      <text-trigger>switch</text-trigger>
  </snippet>
  <snippet id="org.neptun3.snippets.javascript.case" category="tools.Snippets">
      <title>case</title>
      <text><![CDATA[case '${1:case}':
	${2:// code}
	break;
${3}]]></text>
      <syntax-context>js, js *</syntax-context>
      <text-trigger>case</text-trigger>
  </snippet>
  <snippet id="org.neptun3.snippets.javascript.for" category="tools.Snippets">
      <title>for (...) {...}</title>
      <text><![CDATA[for (var ${2:i} = 0; $2 < ${1:Things}.length; $2${3:++}) {
	${4:$1[$2]}
}]]></text>
      <syntax-context>js, js *</syntax-context>
      <text-trigger>for</text-trigger>
  </snippet>
  <snippet id="org.neptun3.snippets.javascript.forr" category="tools.Snippets">
      <title>for (...) {...} (Improved Native For-Loop)</title>
      <text><![CDATA[for (var ${2:i} = ${1:Things}.length - 1; $2 >= 0; $2${3:--}) {
	${4:$1[$2]}
}]]></text>
      <syntax-context>js, js *</syntax-context>
      <text-trigger>forr</text-trigger>
  </snippet>
  <snippet id="org.neptun3.snippets.javascript.wh" category="tools.Snippets">
      <title>while (...) {...}</title>
      <text><![CDATA[while (${1:/* condition */}) {
	${2:/* code */}
}]]></text>
      <syntax-context>js, js *</syntax-context>
      <text-trigger>wh</text-trigger>
  </snippet>
</action-recipes>